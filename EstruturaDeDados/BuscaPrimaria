
program BuscaPrimaria;
type vet = array [1..3] of integer;
var valor, aux, i, dim,j: integer; vetor: vet;
 
function Binaria(vetor: vet;chave: integer; dim: integer): integer;
var inicio, meio, fim: integer;
begin
    fim := dim;
    inicio := 1;
    Binaria := -1;
    repeat
        meio := (inicio+fim) div 2;
        if (vetor[meio] = chave) then
            begin
                Binaria := meio;
                inicio := fim + 1;
            end
        else 
            if(chave<vetor[meio]) then
                fim := (meio-1)
            else
                inicio := (meio+1);
    until (inicio > fim );     
end;
 
begin
  dim := 3;
  for i := 1 to dim do 
    begin
        write('Entre com o ',i,'o numero = ');
        read(vetor[i]);
        writeln;
    end;
  for i := 1 to (dim-1) do
    for j := (i+1) to dim do
        if(vetor[i]>vetor[j]) then
    begin
        aux := vetor[i];
        vetor[i] := vetor[j];
        vetor[j] := aux;
    end;
    
write('Digite um numero a pesquisar = ');
readln(valor);
 
if (Binaria(vetor,valor,dim)<>-1) then writeln('OK! Posicao ',Binaria(vetor,valor,dim),'ยบ do vetor')
else
    writeln('Numero nao encontrado no vetor');
end.
