Program Teste;
uses crt;

Type    endNODO = ^NODO;
	NODO = record
		Dado: integer;
		PROX: endNODO;
End;

Var  p,q,r: endNODO; num:integer;

FUNCTION x(p:endnodo):integer;
var cont:integer;
   s:endnodo;
begin
   cont:=1;
   s:=p;
   if(p=nil) then
     cont:=0
   else
     while(s^.prox<>nil) do
        begin
           cont:=cont+1;
           s:=s^.prox;
        end;
   x:=cont;
end;

begin
   clrscr;
   writeln('VAMOS COMEâ‚¬AR!!!');
   p:=nil;
   writeln('entre com um numero=');
   readln(num);
   new(p);
   p^.dado:=num;
   p^.prox:=nil;
   q:=p;
   writeln('entre com um numero=');
   readln(num);

   while(num<>0) do
     begin
      new(r);
      q^.prox:=r;
      r^.Dado := num;
      r^.prox := nil;
      q:=r;
      writeln('entre com outro numero=');
      readln(num);
    end;
  q:=p;

  while (q<>nil) do
     begin
         writeln('q^.dado=',q^.dado);
         q:=q^.prox;
     end;

 writeln('TOTAL DE NODOS=', x(p));
 readln;

End.
