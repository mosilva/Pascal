Program PilhaContagemElementos;

const max = 100;
type pilha = record
        obj: array  [1..max] of string;
        j: integer;
end;

var  p1: pilha;
     i,i2: integer;
     objeto:string;

procedure  INIT (var p:pilha);
//criar  a pilha
begin   
        p.j := 0;
end;


procedure PUSH(var p:pilha; ob:string);
// adiciona elementos na pilha
begin
        p.j :=p.j +1;
        p.obj[p.j] := ob;
end;

procedure POP(var p:pilha);
begin
    p.j := p.j-1;
end;

function ISEMPTY(p:pilha):boolean;
begin
    if  p.j = 0 then ISEMPTY := true
    else ISEMPTY := false;  
end;    

function ISFULL(p:pilha;max:integer):boolean;
begin
    if p.j = max then
            ISFULL:= true
    else 
        ISFULL:= false;
end;

Function Q(p: pilha): integer;
begin
	Q:=p.j;
end;


begin
    INIT(p1);
    objeto := 'inicio';
    i2 := 0;
    writeln('Digite elementos de uma lista, at√© escrever "fim": ');
    while ((objeto <> 'fim') and (i2 < max)) do
        begin
        readln(objeto);
        if (objeto <> 'fim') then
            begin
            PUSH (p1,objeto);
            i2 := i2 + 1;
            end;
        end;
writeln();
writeln('Numero total de elementos: ', Q(P1)); 
writeln ('saida da pilha');
while (ISEMPTY  (P1) = false) do
    begin
        writeln(p1.obj[p1.j]);
        POP(p1);
    end;
end.
